var SequenceSum = (function() {
  function SequenceSum() {}

  SequenceSum.showSequence = function(count) {
    if(count < 0){
      return count + '<0'
    }
    if(count === 0){
      return '0=0'
    }
    let str = ''
    let sum = 0
    for(let i = 0; i <= count; i++){
      sum += i
      str += i + '+'
    }
    return str.slice(0, str.length-1) + ' = ' + sum
    // for
      //while
  };

  return SequenceSum;

})();
